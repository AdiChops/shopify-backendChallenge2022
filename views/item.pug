doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        link(rel="stylesheet", href="/styles/styles.css")
        title #{item.name}
    body 
        h1 Item Details 
        i.pseudobtn#edit(class="fa fa-pencil" aria-hidden="true")
        p Name: 
            input(type="text",name="name",value=`${item.name}`)
        p Price: $
            input(type="number",min="0.01",name="price", step="0.01",value=`${parseFloat(item.price).toFixed(2)}`)
        p Stock: 
            input(type="number",min="0",name="stock",value=`${item.stock}`) 
            |  in stock
        if item.tags.length > 0
            h4 Tags: 
                each tag in item.tags 
                    p #{tag}
        if item.warehouseLocations.length > 0
            h4 Warehouse Locations:
            ul 
                each warehouse in item.warehouseLocations 
                    li #{warehouse.city} (#{warehouse.streetNumber} #{warehouse.streetName})
