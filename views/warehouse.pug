doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
        link(rel="stylesheet", href="/styles/styles.css")
        script(src="/scripts/warehouse.js" defer="defer") 
        title Warehouse Information
    body 
        h1 Warehouse Information 
        i.pseudobtn#edit(class="fa fa-pencil" aria-hidden="true")
        p City: 
            input#city(name="city",value=`${warehouse.city}`, disabled) 
        p Street Number:
            input#streetNumber(name="streetNumber",value=`${warehouse.streetNumber}`, disabled) 
        p Street: 
            input#streetName(name="streetName",value=`${warehouse.streetName}`, disabled)
        p Country: 
            input#country(name="country",value=`${(new Intl.DisplayNames(['en'], { type: 'region' })).of(warehouse.country)}`, disabled)
        p Province/State: 
            input#province(name="province",value=`${warehouse.province}`, disabled)
        p Postal/ZIP Code: 
            input#postalCode(name="postalCode",value=`${warehouse.postalCode}`, disabled)
        button.btn.btn-primary#saveBtn Save
        button.btn.btn-danger#cancelBtn Cancel

